<div class='p-2 flex flex-col sm:flex-row rounded border-2 border-gray-300 mb-4'>
  <div><%= image_tag @product.image %></div>
  <div class='p-2 flex flex-col border-t-2 sm:border-t-0 sm:border-l-2 leading-9'>
    <p><b><%= @product.name %></b></p>
    <p><%= t(:price) %>: <%= number_to_currency @product.price_in_uah, precision: 2, locale: :uk %></p>
    <p><%= t(:discount) %>: <u class='text-red-600'><%= @product.discount %>%</u></p>
    <p><u><%= t(:discount_price) %>: <%= number_to_currency @product.discount_price_in_uah, precision: 2, locale: :uk %></u></p>
    <p><%= t(:amount) %>: <%= @product.amount || '-' %></p>
    <p><%= t(:expire_on) %>: <%= @product.expire_on.strftime('%d.%m.%Y') %></p>
    <p><%= t(:company) %>: <%= @product.company.name %></p>
    <p><%= t(:category) %>: <%= @product.category.name %></p>
    <%= link_to t(:on_the_official_site), @product.url, class: 'text-blue-600', target: :_blank %>
  </div>
</div>
